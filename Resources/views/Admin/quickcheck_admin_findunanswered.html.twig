{{ pageSetVar('title', 'Unexplained Questions') }}
<table class="table table-striped">
    <thead>
        <tr>
            <th>{{ 'Question'|trans }}</th>
            <th> {{ 'Actions'|trans }} </th></tr>
    </thead>
    <tbody>
        {% for item in questions %}
            {% set qtype = item.quickcheckqtype %}
            <tr>
                <td>{{ item.quickcheckqtext }}</td>
                <td class="actions">
                    {% if qtype == 0 %}
                       <a href="{{ path('paustianquickcheckmodule_admin_edittextquest', {"question": item.id}) }}" class="fas fa-edit"></a>
                    {% endif %} 
                    {% if qtype == 1 %}
                        <a href="{{ path('paustianquickcheckmodule_admin_editmcquest', {"question": item.id}) }}" class="fas fa-edit"></a>
                    {% endif %}
                    {% if qtype == 2 %}
                        <a href="{{ path('paustianquickcheckmodule_admin_edittfquest', {"question": item.id}) }}" class="fas fa-edit"></a>
                    {% endif %}
                    {% if qtype == 3 %}
                        <a href="{{ path('paustianquickcheckmodule_admin_editmatchquest', {"question": item.id}) }}" class="fas fa-edit"></a>
                    {% endif %}
                    {% if qtype == 4 %}
                        <a href="{{ path('paustianquickcheckmodule_admin_editmansquest', {"question": item.id}) }}" class="fas fa-edit"></a>
                    {% endif %}
                        <a href="{{ path('paustianquickcheckmodule_admin_deletequestion', {"question": item.id}) }}" onclick="return confirm('Are you sure you want to delete this question?')" class="fas fa-trash"></a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
